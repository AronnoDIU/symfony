{# templates/user/show.html.twig #}

{% extends 'base.html.twig' %}

{% if is_granted('ROLE_ADMIN') %}
    {% block title %}User Details - {{ user.username }}{% endblock %}

    {% block body %}
        <h1>User Details - {{ user.username }}</h1>

        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{ user.id }}</dd>

            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">{{ user.username }}</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">{{ user.email }}</dd>

            <dt class="col-sm-3">Password</dt>
            <dd class="col-sm-9">{{ user.password }}</dd>

            <dt class="col-sm-3">Salt</dt>
            <dd class="col-sm-9">{{ user.salt }}</dd>

            <dt class="col-sm-3">Roles</dt>
            <dd class="col-sm-9">{{ user.roles|join(', ') }}</dd>
        </dl>

        <div class="mt-3">
            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
            <a href="{{ path('user_index') }}" class="btn btn-secondary">Back to User List</a>
        </div>
    {% endblock %}
{% endif %}

{% if is_granted('ROLE_USER') %}
    {% block title %}User Details - {{ user.username }}{% endblock %}

    {% block body %}
        <h1>User Details - {{ user.username }}</h1>

        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">{{ user.id }}</dd>

            <dt class="col-sm-3">Username</dt>
            <dd class="col-sm-9">{{ user.username }}</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">{{ user.email }}</dd>

            {# Add other user properties if needed #}

            <dt class="col-sm-3">Roles</dt>
            <dd class="col-sm-9">{{ user.roles|join(', ') }}</dd>
        </dl>
    {% endblock %}
    {# Add link to redirect to the home page #}
    <a href="{{ path('admin') }}">Go to Admin Home</a>
{% endif %}
