{# templates/user/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit User - {{ user.username }}{% endblock %}

{% block body %}
    <h1>Edit User - {{ user.username }}</h1>

    {{ form_start(form) }}
    {{ form_row(form.username, {'attr': {'class': 'form-control'}}) }}
    {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}

    {# Add other form fields if needed #}

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
        <a href="{{ path('user_index') }}" class="btn btn-secondary">Cancel</a>
    </div>
    {{ form_end(form) }}
    {# Add link to redirect to the home page #}
    <a href="{{ path('admin') }}">Go to Admin Home</a>
{% endblock %}
