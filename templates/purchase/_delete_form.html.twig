<form method="post" action="{{ path('app_purchase_delete', {'id': purchase.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ purchase.id) }}">
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

{# Include the "Approve" button if the status is set to 'draft' #}
{% if purchase.status == 'draft' %}
    <form method="get" action="{{ path('app_purchase_approve', {'id': purchase.id}) }}" style="display: inline;">
        <button type="submit" class="btn btn-success">Approve</button>
    </form>
{% endif %}

{# Add link to redirect to the home page #}
<a href="{{ path('admin') }}">Go to Admin Home</a>
